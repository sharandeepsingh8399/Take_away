<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sharan.take_away.menu"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:padding="5dp"

        android:background="@drawable/lt">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            android:id="@+id/iv1"
            android:padding="2dp"

            android:src="@drawable/sif"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            android:id="@+id/iv2"
            android:padding="2dp"

            android:src="@drawable/cf"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            android:id="@+id/iv3"
            android:padding="2dp"
            android:src="@drawable/cb"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            android:padding="2dp"
            android:id="@+id/iv4"
            android:src="@drawable/chicken"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            android:padding="2dp"
            android:id="@+id/iv5"
            android:src="@drawable/pizza"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_height="130sp"
            android:id="@+id/iv6"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/des"/>

    </LinearLayout>

</LinearLayout>
